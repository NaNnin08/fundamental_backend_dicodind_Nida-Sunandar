{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "linebreak-style": ["error", "windows"],
    "no-console": "off",
    "quotes": ["error", "double"],
    "no-underscore-dangle": [
      "off",
      {
        "allowAfterThis": true
      }
    ]
  }
}
